{
  "name": "tsiura/async-mqtt-client",
  "description": "Ready to use async MQTT client based on reactphp",
  "authors": [
    {
      "name": "Yevhenii Tsiura",
      "email": "tsura.evgeniy@gmail.com"
    }
  ],
  "repositories": [
    {
      "type": "vcs",
      "url": "https://github.com/tsiura/promise-watcher.git"
    }
  ],
  "require": {
    "php": "^8.2",
    "react/promise": "^2.7",
    "react/event-loop": "^1.1",
    "react/async": "^4@dev",
    "react/socket": "^1.11",
    "psr/log": "^3.0",
    "webmozart/expression": "^1.0",
    "monolog/monolog": "^3.3",
    "tsiura/promise-watcher": "dev-main"
  },
  "require-dev": {
    "phpunit/phpunit": "^10.0",
    "squizlabs/php_codesniffer": "^3.7",
    "vimeo/psalm": "^5.9",
    "phpstan/phpstan": "^1.10"
  },
  "autoload": {
    "psr-4": {
      "Tsiura\\MqttClient\\": "src/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "Tests\\": "tests/"
    }
  }
}
